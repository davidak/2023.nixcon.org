---
import SectionParagraph from "../common/Section/SectionParagraph.astro";
import SubSectionHeading from "../common/Section/SubSectionHeading.astro";
import SectionHeading from "../common/Section/SectionHeading.astro";
import Section from "../common/Section/Section.astro";

const timelineData = [{
    day: "Friday",
    date: "2023-09-08",
    name: "Talks & Workshops",
    link: "/talks"
}, {
    day: "Saturday",
    date: "2023-09-09",
    name: "Talks & Workshops",
    link: "/talks"
}, {
    day: "Sunday",
    date: "2023-09-10",
    name: "Hackday",
    link: "/#hackday"
},
]
---

<Section extraClasses="pb-4">
    <SectionHeading id="timeline">Timeline</SectionHeading>
    <div class="grid grid-cols-3 gap-4">
        {timelineData.map((e) => (
                <div class="text-md bg-nixblue-800 font-black py-2 text-center rounded-md">
                    <div class="text-lg">{e.day}</div>
                    <div class="text-xs mb-2">{e.date}</div>
                    <a href={e.link}>{e.name}</a>
                </div>
        ))}
    </div>
    <div class="text-sm mt-4">
        This event is organized by the community for the community:
        everyone is welcome to contribute.
    </div>
</Section>